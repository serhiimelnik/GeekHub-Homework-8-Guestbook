{% extends '::base.html.twig' %}

{% block body %}
    {{ include('MelnikGuestbookBundle::layout.html.twig') }}
    <div class="container">
        <div class="well">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.email) }}
                            <button class="btn btn-success ajax-submit">Огонь</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-9">
                            {{ form_row(form.text) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    </div>
    <div style="width:100%; height:300px; overflow:auto; border:solid 1px #069;">
        {% for entry in entrys %}
            <p class="lead">Name: {{ entry.name }}</p></br>
            <p class="lead">Email: <a href="mailto:#">{{ entry.email }}</a></p></br>
            <blockquote>
                <p>{{ entry.text }}</p></br>
            </blockquote>
        {% endfor %}
    </div>
    {{ knp_pagination_render(entrys) }}
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
{% endblock body %}